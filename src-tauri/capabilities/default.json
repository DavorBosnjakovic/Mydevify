{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-exists",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://**" },
        { "url": "http://localhost:*/**" }
      ]
    }
  ],
  "remote": {
    "urls": ["asset://*"]
  }
}